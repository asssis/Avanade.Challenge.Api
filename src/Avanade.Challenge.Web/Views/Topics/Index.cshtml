@model IEnumerable<Avanade.Challenge.Api.Infra.Database.Domain.Topic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" href="/Topics/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" href="/Topics/Edit/@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" href="/Topics/Details/@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" href="/Topics/Delete/@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
