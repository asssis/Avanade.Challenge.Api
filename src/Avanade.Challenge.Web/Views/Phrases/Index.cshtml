@model IEnumerable<Avanade.Challenge.Api.Infra.Database.Domain.Phrase>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" href="/Phrases/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expression)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.Descricao)
            </td>
            <td>
                <a href="/Phrases/Edit/@item.Id" asp-route-id="@item.TopicId">Edit</a> |
                <a href="/Phrases/Details/@item.Id" asp-route-id="@item.TopicId">Details</a> |
                <a href="/Phrases/Delete/@item.Id" asp-route-id="@item.TopicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
